<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.LocalDB.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#80deea"/>
                <Setter Property="BarTextColor" Value="Black"/>
            </Style>

            <Style x:Key="Button" TargetType="Button">
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
                <Setter Property="TextColor" Value="White" />
            </Style>

            <Style x:Key="ButtonNew" TargetType="Button" BasedOn="{StaticResource Button}">
                <Setter Property="BackgroundColor" Value="Teal" />
            </Style>

            <Style x:Key="ButtonCancel" TargetType="Button" BasedOn="{StaticResource Button}">
                <Setter Property="BackgroundColor" Value="Red" />
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>